<launch>
  <arg name="model" default="waffle"/>
  <arg name="x_pos" default="0.3"/>
  <arg name="y_pos" default="-3.5"/>
  <arg name="z_pos" default="0.0"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find dang_gazebo)/worlds/dang_1.world"/>
    <arg name="paused" value="true"/>
    <arg name="use_sim_time" value="false"/>
    <arg name="gui" value="false"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) z -Y 1.5 -param robot_description" />
</launch>
